@model ProjectData.Entities.AuthorEntity

@{
    ViewData["Title"] = "Usuń Autora";
}

<style>
    body {
        font-family: Tahoma;
    }

    h3 {
        margin-bottom: 20px;
        font-size: 24px;
    }

    hr {
        margin-bottom: 20px;
        border: 1px solid #e5e5e5;
    }

    .row {
        margin-bottom: 20px;
    }

    .col-sm-2 {
        font-weight: bold;
    }

    .col-sm-10 {
        font-size: 18px;
    }

    .btn-danger {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
        border-radius: 5px;
        padding: 8px 15px;
        text-decoration: none;
        display: inline-block;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
            text-decoration: none;
        }

    .btn-primary{
        background-color: #5bc0de;
        border-color: #5bc0de;
        color: #fff;
    }

        .btn-primary:hover{
            background-color: #31b0d5;
            border-color: #269abc;
            color: #fff;
        }
</style>

<h3>Czy na pewno chcesz usunąć tego autora?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index" class="btn">Powrót do Listy</a>
    </form>
</div>
