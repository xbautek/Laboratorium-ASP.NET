@model List<Comment>

<style>
    /* Dodaj ten fragment do pliku Index.cshtml */

    body {
        font-family: Tahoma;
    }

    table {
        width: 100%;
        margin-top: 20px;
    }



    .btn-primary,
    .btn-info,
    .btn-outline-info,
    .btn-outline-success,
    .btn-outline-danger {
        background-color: #5bc0de;
        border-color: #5bc0de;
        color: #fff;
    }

        .btn-primary:hover,
        .btn-info:hover,
        .btn-outline-info:hover,
