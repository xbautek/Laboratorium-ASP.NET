@model PagingList<Photo>

@{
    ViewData["Title"] = "PagedIndex";
}

<!-- ... Reszta kodu ... -->

<a class="btn-primary" asp-area="" asp-controller="Photo" asp-action="CreateApi">Dodaj Zdjęcie</a>

<form method="get" asp-action="PagedIndex">
    <label for="authorId">Filtruj według autora:</label>
    <select name="authorId" id="authorId">
        <option value="">Wybierz autora</option>
        @foreach (var author in ViewBag.AuthorsList as List<SelectListItem>)
        {
            <option value="@author.Value">@author.Text</option>
        }
    </select>
    <button type="submit" class="btn btn-primary">Filtruj</button>
</form>


@if (Model.Data.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.DateAndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.Camera)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.Format)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data.GetEnumerator().Current.AuthorsList)
                </th>
                <th>
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model.Data)
            {
                <tr>
                    <td>

                        @item.DateAndTime
                    </td>

                    <td>
                        @item.Camera
                    </td>
                    <td>
                        @item.Format.GetDisplayName()
                    </td>
                    <td>
                        @if (item.AuthorsList != null)
                        {
                            var author = item.AuthorsList.FirstOrDefault(a => a.Value == item.AuthorId.ToString());
                            @author?.Text
                        }
                        else
                        {
                            @item.AuthorId
                        }
                    </td>
                    <td>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id=@item.Id>Szczegóły</a>
                        <a class="btn btn-outline-success" asp-action="Update" asp-route-id=@item.Id>Edycja</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id=@item.Id>Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Photos page navigation">
        <ul class="pagination">
            @if (Model.IsPrevious)
            {
                <li class="page-item">
                    <a class="page-link"
               asp-controller="Photo"
               asp-action="PagedIndex"
               asp-route-page="@(Model.Page - 1)"
               asp-route-size="@Model.Size">
                        Poprzednia
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link">Poprzednia</a>
                </li>
            }
            <li class="page-item disabled">
                <a class="page-link">@Model.Page</a>
            </li>
            @if (Model.IsNext)
            {
                <li class="page-item">
                    <a class="page-link"
               asp-controller="Photo"
               asp-action="PagedIndex"
               asp-route-page="@(Model.Page + 1)"
               asp-route-size="@Model.Size">
                        Następna
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link">Następna</a>
                </li>
            }
        </ul>
    </nav>

}
