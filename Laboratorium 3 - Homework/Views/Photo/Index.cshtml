@model List<Photo>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Lista Zdjęć</h1>

<a class="btn-primary" asp-area="" asp-controller="Photo" asp-action="Create">Dodaj</a>
<a class="btn-primary" asp-area="" asp-controller="Photo" asp-action="CreateApi">Dodaj api</a>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].DateAndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Camera)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Format)
                </th>

                <th>
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>

                        @item.DateAndTime
                    </td>

                    <td>
                        @item.Camera
                    </td>
                    <td>
                        @item.Format.GetDisplayName()
                    </td>
                    
                    <td>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id=@item.Id>Szczegóły</a>
                        <a class="btn btn-outline-success" asp-action="Update" asp-route-id=@item.Id>Edycja</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id=@item.Id>Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
