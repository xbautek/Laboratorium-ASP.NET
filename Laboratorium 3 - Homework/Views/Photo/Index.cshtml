@model Dictionary<int, Photo>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Lista Zdjęć</h1>

<a class="btn-primary" asp-area="" asp-controller="Photo" asp-action="Create">Dodaj</a>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Data i czas
                </th>
                <th>
                    Aparat
                </th>
                <th>
                    Autor
                </th>
                <th>
                    Format
                </th>
                <th>
                    Akcje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>

                        @item.Value.DateAndTime
                    </td>

                    <td>
                        @item.Value.Camera
                    </td>
                    <td>
                        @item.Value.Author
                    </td>
                    <td>
                        @item.Value.Format
                    </td>
                    <td>
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id=@item.Key>Szczegóły</a>
                        <a class="btn btn-outline-success" asp-action="Update" asp-route-id=@item.Key>Edycja</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id=@item.Key>Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
